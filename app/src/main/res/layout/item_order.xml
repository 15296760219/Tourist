<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480px"
    android:paddingLeft="30px"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="705px"
        android:layout_marginTop="32px"
        android:layout_height="335px"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_item_order"
            android:layout_width="705px"
            android:layout_height="match_parent"
           android:src="@mipmap/main_pic_bg3"/>

        <CheckBox
            android:id="@+id/like_item_order"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="20px"
            android:background="@drawable/love_btn3"
            android:button="@null"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:paddingTop="15px"
        android:layout_marginBottom="20px">

        <LinearLayout
            android:id="@+id/ll_item_order"
            android:layout_width="match_parent"
            android:layout_height="38px">

            <TextView
                android:id="@+id/title_item_order"
                style="@style/text_balck_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34px"
                android:text="桂林—凤凰古城2日游"/>

            <TextView
                android:id="@+id/new_item_order"
                android:layout_width="35px"
                android:layout_height="35px"
                android:layout_marginLeft="12px"
                android:background="@drawable/news_circle"
                android:gravity="center"
                android:text="新"
                android:textColor="#fff"/>
        </LinearLayout>

        <TextView
            android:id="@+id/price_item_order"
            style="@style/options_features_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="¥2200"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_order"
            android:paddingTop="19px">

            <TextView
                android:id="@+id/payment_item_order"
                style="@style/item_features_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34px"
                android:text="3人付款 . "/>

            <TextView
                android:id="@+id/comments_item_order"
                style="@style/item_features_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="10条评论 . "/>

            <TextView
                android:id="@+id/collection_item_order"
                style="@style/item_features_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="100收藏"/>

        </LinearLayout>
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
