<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >

    <com.zhy.autolayout.AutoRelativeLayout
       android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_marginTop="32px"
            android:id="@+id/img_item_order"
            android:layout_width="690px"
            android:layout_height="314px"
            android:src="@mipmap/main_pic_bg3"/>

        <CheckBox
            android:layout_marginTop="50px"
            android:layout_marginLeft="611px"
            android:id="@+id/like_item_order"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/love_btn3"
            android:button="@null"/>
    </com.zhy.autolayout.AutoRelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35px">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_item_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="34px"
                android:id="@+id/title_item_order"
                style="@style/item_features_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桂林—凤凰古城2日游" />

            <TextView
                android:id="@+id/new_item_order"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:layout_marginLeft="12px"
                android:background="@drawable/news_circle"
                android:gravity="center"
                android:text="新"
                android:textColor="#fff" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/price_item_order"
            style="@style/options_features_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="¥220" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_item_order"
            android:paddingTop="10dp">

            <TextView
                android:layout_marginLeft="34px"
                android:id="@+id/payment_item_order"
                style="@style/item_features_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3人付款 . " />

            <TextView
                android:layout_marginLeft="15px"
                android:id="@+id/comments_item_order"
                style="@style/item_features_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10条评论 . " />

            <TextView
                android:layout_marginLeft="15px"

                android:id="@+id/collection_item_order"
                style="@style/item_features_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100收藏" />

        </LinearLayout>
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
