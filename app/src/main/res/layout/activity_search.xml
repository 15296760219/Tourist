<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:paddingTop="85px">

        <ImageView
            android:id="@+id/return_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:src="@drawable/isme_back_left"/>

        <EditText
            android:layout_width="595px"
            android:layout_height="50px"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60px"
            android:background="@drawable/shape"
            android:backgroundTint="#fff"
            android:drawableLeft="@mipmap/sb"
            android:drawablePadding="10px"
            android:gravity="center|left"
            android:hint="搜索"
            android:paddingLeft="30px"/>

        <ImageView
            android:id="@+id/mi_search"
            android:layout_width="34px"
            android:layout_height="28px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33px"
            android:layout_marginTop="20px"
            android:background="@color/color_white"
            android:src="@mipmap/ef"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="30px"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="热搜"/>

    <com.silent.fiveghost.tourist.customview.FlowLayout
        android:id="@+id/flow_search"
        android:layout_marginLeft="40px"
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.silent.fiveghost.tourist.customview.FlowLayout>


</com.zhy.autolayout.AutoLinearLayout>
