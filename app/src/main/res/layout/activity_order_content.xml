<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.OrderContentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#232a33"
                android:orientation="vertical"
                android:paddingBottom="40px"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="695px"
                    android:layout_height="470px"/>

                <Gallery
                    android:id="@+id/gallery"
                    android:layout_width="695px"
                    android:layout_height="150px"
                    android:layout_marginTop="35px"
                    android:spacing="25px"/>

                <RelativeLayout
                    android:layout_width="695px"
                    android:layout_height="110px"
                    android:layout_marginTop="35px">

                    <TextView
                        android:id="@+id/title_order_content"
                        android:layout_width="wrap_content"
                        android:layout_height="45px"
                        android:text="云南大理古城小团3日游"
                        android:textColor="#fafdfc"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/locationimg_order_content"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:layout_below="@id/title_order_content"
                        android:layout_marginTop="25px"/>

                    <TextView
                        android:id="@+id/locationtext_order_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_order_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="25px"
                        android:layout_toRightOf="@id/locationimg_order_content"
                        android:text="云南大理xxx"
                        android:textColor="#bcbec3"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginTop="30px">

                    <ExpandableListView
                        android:layout_width="330px"
                        android:layout_height="100px"
                        android:background="#2e353e"/>

                    <ExpandableListView
                        android:layout_width="330px"
                        android:layout_height="100px"
                        android:layout_marginLeft="30px"
                        android:background="#2e353e"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical"
                android:paddingTop="40px">

                <TextView
                    style="@style/text_balck_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="出行信息"/>

                <android.support.v7.widget.CardView
                    android:layout_width="685px"
                    android:layout_height="495px"
                    android:layout_marginTop="30px"
                    android:paddingBottom="30px"
                    android:paddingTop="30px"
                    app:cardCornerRadius="7px"
                    app:cardElevation="10px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28px"
                        android:layout_marginRight="28px"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="95px"
                            android:paddingBottom="26px"
                            android:paddingTop="30px">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/options_features_grey"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="共计/张"/>

                                <TextView
                                    android:id="@+id/number_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"/>
                            </LinearLayout>

                            <View
                                android:layout_width="4px"
                                android:layout_height="60px"
                                android:background="#dadada"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/options_features_grey"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总价/元"/>

                                <TextView
                                    android:id="@+id/price_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3000"/>
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120px">

                            <ImageView
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="70px"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/adultprice_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000"/>

                                <TextView
                                    style="@style/text_dark_center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="成人票/人"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="175px"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15px"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/reduction1_order_content"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>

                                <TextView
                                    android:id="@+id/adultnum_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/add_order_content"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="630px"
                            android:layout_height="5px"
                            android:background="#edcf12"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120px">

                            <ImageView
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="70px"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/childprice_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000"/>

                                <TextView
                                    style="@style/text_dark_center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="儿童票/人"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="175px"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15px"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/reduction2_order_content"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>

                                <TextView
                                    android:id="@+id/childnum_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/add2_order_content"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="630px"
                            android:layout_height="5px"
                            android:background="#e7e7e7"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:layout_marginTop="25px">

                            <ImageView
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_centerVertical="true"
                                android:background="#f00"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="70px"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/teamprice_order_content"
                                    style="@style/text_balck_big"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/text_dark_center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="团体票/人"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15px"
                                        android:text="(10人以上可团)"
                                        android:textColor="#ff0000"
                                        android:textSize="16sp"/>
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/add3_order_content"
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15px"/>

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="685px"
                    android:layout_height="530px"
                    android:layout_marginTop="40px"
                    app:cardCornerRadius="7px"
                    app:cardElevation="10px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80px"
                        android:layout_marginRight="80px"
                        android:layout_marginTop="35px"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40px">

                            <TextView
                                android:id="@+id/text_content"
                                style="@style/text_balck_big"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="预定人信息"/>

                            <ImageView
                                android:layout_width="17px"
                                android:layout_height="17px"
                                android:layout_toRightOf="@id/text_content"
                                android:background="#f00"/>
                        </RelativeLayout>

                        <TextView
                            style="@style/options_features_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="28px"
                            android:layout_marginTop="45px"
                            android:text="出行人姓名"/>

                        <EditText
                            android:id="@+id/etName_order_content"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:layout_marginTop="10px"
                            style="@style/text_balck_big"
                            android:background="@drawable/border_gray_et"
                            android:hint="请输入您的姓名"
                            android:paddingLeft="30px"/>

                        <TextView
                            style="@style/options_features_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="28px"
                            android:layout_marginTop="45px"
                            android:text="联系电话（用户接收订单信息）"/>

                        <EditText
                            android:id="@+id/etPhone_order_content"
                            style="@style/text_balck_big"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/border_gray_et"
                            android:text="1356 6709 842"
                            android:paddingLeft="30px"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25px"
                            android:layout_marginBottom="30px"
                            android:layout_marginTop="65px"
                            android:gravity="center"
                            android:text="查看预定限制"
                            android:textColor="#ff0000"
                            android:textSize="16sp"/>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="685px"
                    android:layout_height="865px"
                    android:layout_marginTop="35px"
                    app:cardCornerRadius="7px"
                    app:cardElevation="10px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80px"
                        android:layout_marginRight="80px"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35px">

                            <TextView
                                android:id="@+id/text2_content"
                                style="@style/text_balck_big"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="出行人信息"/>

                            <ImageView
                                android:layout_width="17px"
                                android:layout_height="17px"
                                android:layout_toRightOf="@id/text2_content"
                                android:background="#f00"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65px"
                            android:layout_marginTop="55px">

                            <Button
                                style="@style/options_features_grey"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="儿童"/>

                            <Button
                                style="@style/options_features_grey"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="成人"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35px">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/options_features_grey"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="姓名"/>

                                <EditText
                                    style="@style/text_balck_big"
                                    android:layout_width="250px"
                                    android:layout_height="80px"
                                    android:layout_marginTop="5px"
                                    android:background="@drawable/border_gray_et"
                                    android:hint="请输入您的姓名"
                                    android:paddingLeft="30px"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45px"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/options_features_grey"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="生日"/>

                                <EditText
                                    style="@style/options_features_grey"
                                    android:layout_width="250px"
                                    android:layout_height="80px"
                                    android:layout_marginTop="5px"
                                    android:background="@drawable/border_gray_et"
                                    android:hint="请选择"
                                    android:paddingLeft="30px"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            style="@style/options_features_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40px"
                            android:text="身份证号"/>

                        <EditText
                            android:id="@+id/etIDNumber_order_content"
                            style="@style/text_balck_big"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/border_gray_et"
                            android:text="1423344234245425435"
                            android:paddingLeft="30px"/>

                        <TextView
                            style="@style/options_features_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40px"
                            android:text="联系电话（用户接收订单信息）"/>

                        <EditText
                            android:id="@+id/etOrderPhone_order_content"
                            style="@style/text_balck_big"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/border_gray_et"
                            android:text="1423344234245425435"
                            android:paddingLeft="30px"/>

                        <TextView
                            style="@style/options_features_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35px"
                            android:text="备注信息"/>

                        <EditText
                            style="@style/options_features_grey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35px"
                            android:hint=" （内容补充，XX字以内）"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="7px"
                            style="@style/text_balck_big"
                            android:background="#000000"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55px">

                    <ImageView
                        android:id="@+id/imgAdd_order_content"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        style="@style/options_features_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgAdd_order_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35px"
                        android:text="添加出行人信息"/>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:layout_marginTop="290px"
                android:background="#000000">

                <TextView
                    android:id="@+id/personnumber_order_content"
                    style="@style/options_features_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="35px"
                    android:text="成人1，儿童2"
                    android:textColor="#828187"/>

                <TextView
                    android:id="@+id/sumPrice_order_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/personnumber_order_content"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="10px"
                    android:text="30000"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>

                <Button
                    style="@style/text_balck_big"
                    android:layout_width="240px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:background="#19f0c2"
                    android:text="提交订单"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
