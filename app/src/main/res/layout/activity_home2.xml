<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    tools:context="com.silent.fiveghost.tourist.ui.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="1300px"
        ></FrameLayout>
    <RadioGroup
        android:id="@+id/radio_group_button"
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_bottom_personal"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/selector_bottom_font" />
        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ooo"
            android:gravity="center"
            android:text="个人"
            android:textColor="@color/selector_bottom_font" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            >


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_nav_add_actived" />
        </RelativeLayout>

        <RadioButton
            android:id="@+id/radio_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_bottom_order"
            android:gravity="center"
            android:text="订单"
            android:textColor="@color/selector_bottom_font" />

        <RadioButton
            android:id="@+id/radio_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_bottom_order"
            android:gravity="center"
            android:text="特色"
            android:textColor="@color/selector_bottom_font" />
    </RadioGroup>


</com.zhy.autolayout.AutoLinearLayout>
