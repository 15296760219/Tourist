<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="43px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/selector_tourguidestyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="20px"
                android:layout_marginTop="22px"
                android:layout_marginLeft="22px"
                android:id="@+id/img_item_home"
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@mipmap/main_pic_bg"/>

            <RelativeLayout
                android:layout_marginLeft="25px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:layout_marginTop="33px"
                    android:id="@+id/name_item_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导游A"
                    android:textColor="#000"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_marginTop="80px"
                    android:id="@+id/route_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:text="擅长路线：XXXXXXXXXXXXXXXXXXXXXXX"/>

                <com.silent.fiveghost.tourist.customview.RatingBar
                    android:layout_marginRight="35px"
                    android:layout_marginBottom="20px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:starCount="5"
                    app:starEmpty="@drawable/pic_star_grey2x"
                    app:starFill="@drawable/pic_star_yellow2x"
                    app:starImageSize="22px"
                    app:starPadding="15px"
                    app:starStep="1"
                    app:stepSize="Full"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</com.zhy.autolayout.AutoLinearLayout>