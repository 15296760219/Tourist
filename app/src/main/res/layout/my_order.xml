<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="#132434"
        android:orientation="horizontal">

        <TextView
            android:layout_width="825px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180px"
            android:layout_marginTop="84px"
            android:background="@drawable/shape"
            android:backgroundTint="#fff"
            android:drawableLeft="@mipmap/ss"
            android:drawablePadding="35px"
            android:gravity="center|left"
            android:hint="搜索"
            android:paddingLeft="31px"
            android:paddingTop="15px"/>

        <ImageView
            android:id="@+id/mi"
            android:layout_width="34px"
            android:layout_height="28px"
            android:layout_marginLeft="34px"
            android:layout_marginRight="33px"
            android:layout_marginTop="95px"
            android:background="@color/color_white"
            android:src="@mipmap/ef"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="1450px"
        android:layout_margin="100px"
        android:background="@drawable/shape"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:orientation="vertical"
        android:paddingTop="68px">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="200px"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:layout_margin="48px"
                    android:layout_weight="1"
                    android:src="@mipmap/ren2"/>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="120px"
                    android:layout_marginBottom="34px"
                    android:layout_marginTop="34px"
                    android:background="#000"
                    android:gravity="center"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="已发布订单"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="the signed schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="88px"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:layout_margin="48px"
                    android:layout_weight="1"
                    android:src="@mipmap/shu"/>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="120px"
                    android:layout_marginBottom="34px"
                    android:layout_marginTop="34px"
                    android:background="#000"
                    android:gravity="center"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="已发布订单"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="the signed schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="88px"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:layout_margin="48px"
                    android:layout_weight="1"
                    android:src="@mipmap/biao"/>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="120px"
                    android:layout_marginBottom="34px"
                    android:layout_marginTop="34px"
                    android:background="#000"
                    android:gravity="center"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="已发布订单"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="the signed schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="88px"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:layout_margin="48px"
                    android:layout_weight="1"
                    android:src="@mipmap/tub"/>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="120px"
                    android:layout_marginBottom="34px"
                    android:layout_marginTop="34px"
                    android:background="#000"
                    android:gravity="center"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="已发布订单"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="40px"
                        android:text="the signed schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>