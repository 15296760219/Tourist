    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/li"
            android:background="#132434"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="180px"
                android:layout_marginTop="84px"
                android:backgroundTint="#fff"
                android:paddingLeft="31px"
                android:hint="搜索"
                android:paddingTop="15px"
                android:drawablePadding="35px"
                android:drawableLeft="@mipmap/ss"
                android:gravity="center|left"
                android:background="@drawable/shape"
                android:layout_width="825px"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/mi"
                android:background="@color/color_white"
                android:layout_marginTop="95px"
                android:layout_marginLeft="34px"
                android:layout_marginRight="33px"
                android:src="@mipmap/ef"
                android:layout_width="34px"
                android:layout_height="28px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="68px"
        android:layout_width="match_parent"
        android:layout_height="1450px"
        android:orientation="vertical"
        android:layout_margin="100px"
        android:background="@drawable/shape"
        android:backgroundTint="@color/cardview_shadow_end_color"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="200px"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginTop="200px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin ="48px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100px"
                    android:src="@mipmap/ren2" />
                <TextView
                    android:layout_width="1px"
                    android:background="#000"
                    android:gravity="center"
                    android:layout_marginTop="34px"
                    android:layout_marginBottom="34px"
                    android:layout_height="120px"/>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="40px"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="已发布订单"
                        />
                    <TextView
                        android:paddingLeft="40px"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="the signed schedule of trip"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_marginLeft="120px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/jt" />
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>
