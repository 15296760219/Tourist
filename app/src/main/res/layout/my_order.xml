<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:background="#132434"
        android:orientation="horizontal">

        <EditText
            android:layout_width="595px"
            android:layout_height="50px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="85px"
            android:background="@drawable/shape"
            android:backgroundTint="#fff"
            android:paddingLeft="30px"
            android:drawableLeft="@mipmap/sb"
            android:drawablePadding="10px"
            android:gravity="center|left"
            android:hint="搜索"/>

        <ImageView
            android:id="@+id/mi"
            android:layout_width="34px"
            android:layout_height="28px"
            android:layout_marginLeft="34px"
            android:layout_marginRight="33px"
            android:layout_marginTop="95px"
            android:background="@color/color_white"
            android:src="@mipmap/ef"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/li"
        android:background="#f3f6f8"/>

    <LinearLayout
        android:layout_width="690px"
        android:layout_height="840px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="210px"
        android:background="#fefefe"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="145px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="50px"
            app:cardCornerRadius="10px"
            app:cardElevation="10px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/ren2"/>

                <View
                    android:layout_width="5px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:background="#f0f0f3"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingLeft="43px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:text="已发布订单"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7px"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="the new schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="25px"
                    android:layout_weight="0"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="143px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="60px"
            app:cardCornerRadius="10px"
            app:cardElevation="10px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/shu"/>

                <View
                    android:layout_width="5px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:background="#f0f0f3"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingLeft="43px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:layout_weight="1"
                        android:text="已报名订单"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7px"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="the signed schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="25px"
                    android:layout_weight="0"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="143px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="60px"
            app:cardCornerRadius="10px"
            app:cardElevation="10px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/biao"/>

                <View
                    android:layout_width="5px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:background="#f0f0f3"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingLeft="43px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:layout_weight="1"
                        android:text="抢单订单"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7px"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="the lightning orders of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="25px"
                    android:layout_weight="0"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="143px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="60px"
            app:cardCornerRadius="10px"
            app:cardElevation="10px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48px"
                    android:layout_height="60px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/tub"/>

                <View
                    android:layout_width="5px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#f0f0f3"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingLeft="43px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:layout_weight="1"
                        android:text="我的订单"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7px"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="my schedule of trip"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="25px"
                    android:layout_weight="0"
                    android:src="@mipmap/jt"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>