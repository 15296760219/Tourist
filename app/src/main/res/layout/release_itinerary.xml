<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="176px"
            android:background="#22292f"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/return_release"
                android:layout_width="20px"
                android:layout_height="35px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/isme_back_left"/>

            <TextView
                style="@style/text_balck_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="300px"
                android:layout_marginTop="60px"
                android:text="发布行程"
                android:textColor="#ffff"/>

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:background="#f00"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#181f28"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="65px"
                android:paddingTop="50px"
                android:text="一站式发布"
                android:textColor="#ffff"/>

            <View
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:layout_marginBottom="40px"
                android:layout_marginTop="20px"
                android:background="#3e464c"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="65px"
                android:paddingTop="50px"
                android:text="分站式发布"
                android:textColor="#ffff"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginTop="60px"
            android:background="#f6f6f6"
            android:paddingBottom="40px"
            android:paddingTop="36px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="38px"
                android:text="出发城市"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36px"
                android:src="@drawable/bottoml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginTop="60px"
            android:background="#f6f6f6"
            android:paddingBottom="40px"
            android:paddingTop="36px">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:text="游玩城市"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36px"
                android:src="@drawable/bottoml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.zhy.autolayout.AutoRelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_release"
        android:layout_width="match_parent"
        android:layout_height="131px"
        android:layout_alignParentBottom="true"
        android:background="#00c996"
        android:text="发布行程"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>


</com.zhy.autolayout.AutoRelativeLayout>