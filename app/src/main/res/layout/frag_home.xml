<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/home_searchbar"
        android:layout_width="match_parent"
        android:layout_height="120px"></include>

    <com.silent.fiveghost.tourist.customview.ObservableScrollView
        android:id="@+id/scroll_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_home_search">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/cardViewPager"
                android:layout_width="match_parent"
                android:layout_height="323px"
                android:clipChildren="false"
                android:overScrollMode="always"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_Zhoubian"
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:src="@drawable/selector_zhoubain"/>

                    <TextView
                        android:id="@+id/text_Zhoubian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:text="周边游"
                        android:textSize="15sp"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iamge_Rili"
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:src="@drawable/selector_rili"/>

                    <TextView
                        android:id="@+id/text_Rili"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:text="周边游"
                        android:textSize="15sp"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_Zhinan"
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:src="@drawable/selector_zhinan"/>

                    <TextView
                        android:id="@+id/text_Zhinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:text="周边游"
                        android:textSize="15sp"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_Dingwei"
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:src="@drawable/selector_dingwei"/>

                    <TextView
                        android:id="@+id/text_Dingwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:text="周边游"
                        android:textSize="15sp"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_Zutuan"
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:src="@drawable/selector_zutuan"/>

                    <TextView
                        android:id="@+id/text_Zutuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22px"
                        android:text="周边游"
                        android:textSize="15sp"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/home_Popular"
                android:layout_width="match_parent"
                android:layout_height="45px"
                android:layout_marginTop="50px"
                android:orientation="horizontal">

                <View
                    android:layout_width="5px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="45px"
                    android:background="#000000">
                </View>

                <TextView
                    android:id="@+id/text_Popular"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="热门路线"
                    android:textColor="@color/common_text_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/image_Popular"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_marginRight="34px"
                    android:gravity="center_vertical"
                    android:src="@mipmap/btn_rightarrow"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/line_one_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_one"
                        android:layout_width="335px"
                        android:layout_height="337px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="10px"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="16px"
                        app:cardElevation="16px">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/ic_launcher">

                            <TextView
                                android:id="@+id/tv_content_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="20sp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="335px"
                        android:layout_height="531px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="20px"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/ic_launcher">

                            <TextView
                                android:id="@+id/tv_content_for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="20sp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="335px"
                        android:layout_height="531px"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="30px"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/ic_launcher">

                            <TextView
                                android:id="@+id/tv_content_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="20sp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="335px"
                        android:layout_height="337px"
                        android:layout_marginLeft="10px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="20px"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/ic_launcher">

                            <TextView
                                android:id="@+id/tv_content_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="20sp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/home_Guidestyle"
                android:layout_width="match_parent"
                android:layout_height="45px"
                android:layout_marginTop="50px"
                android:orientation="horizontal">

                <View
                    android:layout_width="5px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="45px"
                    android:background="#000000"></View>

                <TextView
                    android:id="@+id/text_Guidestyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="导游风采"
                    android:textColor="@color/common_text_black"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/image_Guidestyle"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_marginRight="34px"
                    android:gravity="center_vertical"
                    android:src="@mipmap/btn_rightarrow"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.silent.fiveghost.tourist.widget.TouristListView
                android:id="@+id/list_Guidestyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35px">

            </com.silent.fiveghost.tourist.widget.TouristListView>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.silent.fiveghost.tourist.customview.ObservableScrollView>
</com.zhy.autolayout.AutoRelativeLayout>
