<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RouteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--轮播图-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="983px">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="983px"/>

                <!--上面的四个小图标-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58px"
                    android:layout_marginTop="56px">

                    <ImageView
                        android:id="@+id/return_route"
                        android:layout_width="56px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="34px"
                        android:src="@drawable/isme_back_left" />

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="38px"
                        android:background="#f00"/>

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="118px"
                        android:background="#f00"/>

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="199px"
                        android:background="#f00"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15px"

                    android:paddingLeft="33px">

                    <TextView
                        android:id="@+id/title_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="大理古城小团三日游"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_route"
                        android:layout_marginTop="49px"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="38px"
                            android:layout_height="38px"
                            android:background="#f00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:text="大理XXXXX"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_route"
                        android:layout_marginTop="100px"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="38px"
                            android:layout_height="38px"
                            android:background="#f00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20px"
                            android:text="2013.01.04-2018.01.07"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="150px"
                        android:layout_height="58px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="28px"
                        android:layout_marginRight="40px"
                        android:background="#10c094"
                        style="@style/text_balck_big"
                        android:text="立即咨询"/>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44px"
                android:layout_marginTop="46px"
                style="@style/text_balck_big"
                android:text="线路详情"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42px"
                android:layout_marginRight="52px"
                android:layout_marginTop="16px"
                android:maxLength="24"
                android:maxLines="4"
                android:text="风景如画的石林，世外桃源的大理，古香古韵的丽江，感受云南大理的古朴自然，一同欣赏西南风景石林和蝴蝶泉，品味各个民族的文化特色，不妨带上亲朋好友一起步入彩云之南的旅程。。。"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="28px"
                android:layout_marginRight="32px"
                android:layout_marginTop="41px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="42px"
                android:layout_marginTop="32px"
                android:text="山美水美人美、风景宜人、优美古城、游玩好去处"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f3f6f8"
                android:orientation="vertical">

                <TextView
                    style="@style/text_balck_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42px"
                    android:layout_marginTop="32px"
                    android:text="出行日期"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="199px"
                        android:layout_height="64px"
                        android:layout_marginLeft="42px"
                        android:background="#00c995"
                        android:gravity="center"
                        android:text="2018.3.04"/>

                    <View
                        android:layout_width="45px"
                        android:layout_height="3px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:background="#000000"/>

                    <TextView
                        android:layout_width="199px"
                        android:layout_height="64px"
                        android:layout_marginBottom="34px"
                        android:background="#ffffff"
                        android:gravity="center"
                        style="@style/text_balck_big"
                        android:text="结束时间"/>

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="685px"
                    android:layout_height="495px"
                    android:layout_marginLeft="41px"
                    android:layout_marginRight="50px"
                    android:paddingLeft="26px"
                    android:paddingRight="26px"
                    app:cardCornerRadius="7px"
                    app:cardElevation="10px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28px"
                        android:layout_marginRight="28px"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="125px"
                            android:paddingBottom="26px"
                            android:paddingTop="30px">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="共计/张"/>

                                <TextView
                                    android:id="@+id/number_item_order_content2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/text_balck_big"
                                    android:text="3"/>

                            </LinearLayout>

                            <View
                                android:layout_width="4px"
                                android:layout_height="60px"
                                android:background="#dadada"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总价/元"/>

                                <TextView
                                    android:id="@+id/price_item_order_content3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/text_balck_big"
                                    android:text="3"/>

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120px">

                            <ImageView
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="70px"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/adultprice_item_order_content1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/text_balck_big"
                                    android:text="2000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/text_dark_center"
                                    android:text="成人票/人"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="175px"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15px"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/reduction1_item_order_content3"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>

                                <TextView
                                    android:text="3"
                                    style="@style/text_balck_big"
                                    android:id="@+id/adultnum_item_order_content3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/add_item_order_content1"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="630px"
                            android:layout_height="5px"
                            android:background="#edcf12"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120px">

                            <ImageView
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="70px"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/text_balck_big"
                                    android:id="@+id/childprice_item_order_content3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/text_dark_center"
                                    android:text="儿童票/人"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="175px"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15px"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/reduction3_item_order_content"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>

                                <TextView
                                    android:id="@+id/childnum_item_order_content2"
                                    android:layout_width="wrap_content"
                                    style="@style/text_balck_big"
                                    android:text="3"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/add5_item_order_content"
                                    android:layout_width="35px"
                                    android:layout_height="35px"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="630px"
                            android:layout_height="5px"
                            android:background="#e7e7e7"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120px">

                            <ImageView
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="70px"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/teamprice_item_order_content2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/text_balck_big"
                                    android:text="2000"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/text_dark_center"
                                        android:text="团体票/人"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15px"
                                        android:text="(10人以上可团)"/>

                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/add4_item_order_content"
                                android:layout_width="35px"
                                android:layout_height="35px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15px"/>

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginRight="552px"
                    android:layout_marginTop="48px"
                    android:maxLines="1"
                    android:text="已报名（13）"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26px"
                    android:layout_marginBottom="35px"
                    android:layout_marginLeft="44px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:layout_marginRight="28px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <ImageView
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:layout_marginRight="28px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <ImageView
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:layout_marginRight="28px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <ImageView
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:layout_marginRight="28px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <ImageView
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:layout_marginRight="28px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <ImageView
                        android:layout_width="89px"
                        android:layout_height="89px"
                        android:layout_marginRight="36px"
                        android:src="@mipmap/ic_launcher_round"/>

                </LinearLayout>

                <View
                    android:background="#dfe2e4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="27px"
                    android:layout_marginRight="32px"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44px"
                    android:layout_marginBottom="50px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_marginLeft="41px"
                        android:layout_marginRight="20px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <ImageView
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_marginRight="20px"
                        android:src="@mipmap/ic_launcher_round"/>

                    <Button
                        android:id="@+id/sign_route"
                        android:layout_width="473px"
                        android:layout_height="80px"
                        android:layout_marginRight="38px"
                        android:background="#000000"
                        android:textColor="#ffffff"
                        android:text="立即报名"/>
                </LinearLayout>


            </LinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>


</com.zhy.autolayout.AutoLinearLayout>
