<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="#2D3238"
              android:paddingBottom="20dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/home_Search_Text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="7"
        android:background="@drawable/feasture_shape_searchbar"
        android:drawableLeft="@drawable/top_icon_search"
        android:drawablePadding="10dp"
        android:gravity="center|left"
        android:hint="搜索"
        android:paddingLeft="20dp"/>

    <ImageView
        android:id="@+id/home_Message_Image"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:src="@mipmap/btn_top_message2x"/>
</LinearLayout>
