<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:id="@+id/ll_home_search"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:paddingTop="80px"
                                     android:paddingBottom="20px"
                                     android:orientation="horizontal">

    <TextView
        android:id="@+id/home_Search_Text"
        android:layout_width="0dp"
        android:layout_height="50px"
        android:layout_marginLeft="59px"
        android:layout_weight="7"
        android:background="@drawable/home_shape_searchbar"
        android:drawableLeft="@drawable/top_icon_search"
        android:drawablePadding="13px"
        android:gravity="center|left"
        android:hint="搜索"
        android:paddingLeft="30px"/>

    <ImageView
        android:id="@+id/home_Message_Image"
        android:layout_width="32px"
        android:layout_height="25px"
        android:layout_marginLeft="34px"
        android:layout_marginRight="31px"
        android:layout_marginTop="11px"
        android:background="@color/color_white"
        android:src="@drawable/top_icon_message"
      />
</com.zhy.autolayout.AutoLinearLayout>
